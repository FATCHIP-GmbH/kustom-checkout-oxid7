<div class="col-sm-6">
    <div class="drop-container" id="kustomAddressWidget">
        <div class="drop-trigger">
            <div class="kustom-label">
                <span class="glyphicon glyphicon-book pull-left" aria-hidden="true"></span>
                <span class="kustom-address-label"> {{ translate({ ident: "FCKUSTOM_CHOOSE_DELIVERY_ADDRESS" }) }}
                            </span>
                <span class="glyphicon glyphicon-menu-down pull-right" aria-hidden="true"></span>
            </div>
        </div>
        <div class="drop-content fixed">
            <form name="address" action="{{ oViewConf.getSslSelfLink() }}" method="post" role="form">
                <div class="hidden">
                    {{ oViewConf.getHiddenSid()|raw }}
                    <input type="hidden" name="cl" value="KustomExpress">
                    <input type="hidden" name="fnc" value="setKustomDeliveryAddress">
                    <input type="hidden" name="kustom_address_id" value="">
                </div>
                <div class="form-group">
                    <div class="btn-group">
                        <button type="button"
                                class="btn btn-default disabled js-kustom-selected-address">
                            {{ translate({ ident: "FCKUSTOM_CHOOSE_DELIVERY_ADDRESS" }) }}</button>
                        <button type="button" class="btn btn-default dropdown-toggle"
                                data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                            <span class="caret"></span>
                            <span class="sr-only">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu">
                            {% for oxid, address in savedAddresses %}
                                <li class="js-kustom-address-list-item"
                                    data-address-id="{{ oxid }}">
                                    <div class="kustom-formatted-address">{{ address }}</div>
                                </li>
                                {% if not loop.last %}
                                    <li role="separator" class="divider"></li>
                                {% endif %}
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" id="setDeliveryAddress"
                            class="btn btn-primary">{{ translate({ ident: "FCKUSTOM_USE_AS_DELIVERY_ADDRESS" }) }}
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>

