{% if isset(iLang) %}
    {% set editlanguage = iLang %}
{% endif %}
{% set lang_tag = "" %}
{% for language in languages %}
    {% if (language.id is same as editlanguage) %}
        {% set lang_tag = language.abbr|upper %}
    {% endif %}
{% endfor %}
<tr>
    <td colspan="3" class="inner-table-wrapper">
        <table>
            <tr>
                <td class="conf-label-2">{{ translate({ ident: "FCKUSTOM_SET_TAC_URI" }) }}</td>
                <td class="lang-input">
                    {% set confVarName = "sKustomTermsConditionsURI_"|cat(lang_tag) %}
                    <div class="input">
                        <input type="text" class="url-input m-lang"
                               id="kustomConditionUri"
                               name="confstrs[sKustomTermsConditionsURI_{{ lang_tag }}]"
                               value="{{ attribute(confaarrs.aarrKustomTermsConditionsURI, confVarName) | default('')  }}"
                               pattern="^(https://)?([a-zA-Z0-9]([a-zA-ZäöüÄÖÜ0-9\-]{0,61}[a-zA-Z0-9])?\.)+[a-zA-Z]{2,6}.*" required>
                    </div>
                </td>
                <td>
                    <span class="kl-tooltip"
                          title="{{ translate({ ident: "FCKUSTOM_TERMS_AND_CONDITIONS_URL_TOOLTIP" }) }}">
                        <i class="fa fa-question fa-lg" aria-hidden="true"></i>
                    </span>
                </td>
            </tr>
            <tr>
                <td class="conf-label-2">{{ translate({ ident: "FCKUSTOM_SET_CANCEL_URI" }) }}</td>
                <td class="lang-input">
                    {% set confVarName = "sKustomCancellationRightsURI_"|cat(lang_tag) %}
                    <div class="input">
                        <input type="text" class="url-input m-lang"
                               id="kustomCancellationUri"
                               name="confstrs[sKustomCancellationRightsURI_{{ lang_tag }}]"
                               value="{{ attribute(confaarrs.aarrKustomCancellationRightsURI, confVarName) }}"
                               pattern="^(https://)?([a-zA-Z0-9]([a-zA-ZäöüÄÖÜ0-9\-]{0,61}[a-zA-Z0-9])?\.)+[a-zA-Z]{2,6}.*" required>
                    </div>
                </td>
                <td>
                    <span class="kl-tooltip"
                          title="{{ translate({ ident: "FCKUSTOM_CANCELLATION_RIGHTS_URL_TOOLTIP" }) }}">
                        <i class="fa fa-question fa-lg" aria-hidden="true"></i>
                    </span>
                </td>
            </tr>
            <tr>
                <td class="conf-label-2">{{ translate({ ident: "FCKUSTOM_SHIPPING_DETAILS" }) }}</td>
                <td class="lang-input">
                    {% set confVarName = "sKustomShippingDetails_"|cat(lang_tag) %}
                    <div class="input">
                        <input type="text" class="m-lang"
                               name="confstrs[sKustomShippingDetails_{{ lang_tag }}]"
                               value="{{ attribute(confaarrs.aarrKustomShippingDetails, confVarName) }}">
                    </div>
                </td>
                <td>
                    <span class="kl-tooltip"
                          title="{{ translate({ ident: "FCKUSTOM_SHIPPING_DETAILS_TOOLTIP" }) }}">
                        <i class="fa fa-question fa-lg" aria-hidden="true"></i>
                    </span>
                </td>
            </tr>
        </table>
    </td>
</tr>