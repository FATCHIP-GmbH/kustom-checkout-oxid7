<link rel="stylesheet" href="{{ oViewConf.getResourceUrl() }}main.css">
<link rel="stylesheet" href="{{ oViewConf.getModuleUrl('fckustom', 'out/admin/src/css/fckustom_admin2.css') }}">
<link rel="stylesheet" href="{{ oViewConf.getModuleUrl('fckustom', 'out/admin/src/css/tooltipster.bundle.min.css') }}">
<link rel="stylesheet"
      href="{{ oViewConf.getModuleUrl('fckustom', 'out/admin/src/css/tooltipster-sideTip-light.min.css') }}">
<script type="text/javascript"
        src="{{ oViewConf.getModuleUrl('fckustom', 'out/src/js/libs/jquery-1.12.4.min.js') }}"></script>
<script type="text/javascript"
        src="{{ oViewConf.getModuleUrl('fckustom', 'out/src/js/libs/tooltipster.bundle.min.js') }}"></script>

{% if readonly %}
    {% set readonly = "readonly disabled" %}
{% else %}
    {% set readonly = "" %}
{% endif %}


<div class="{{ box|default('box') }}" style="{% if not box and not bottom_buttons %}height: 100%;{% endif %}">
    <div class="main-container">
        {% include "@fckustom/admin/fckustom_header.html.twig" with {title: "FCKUSTOM_EXTRA_MERCHANT_DATA"|translate, desc: "FCKUSTOM_EXTRA_MERCHANT_DATA_ADMIN_DESC"|translate} %}
        <hr>

        <form name="myedit" id="myedit" method="post" action="{{ oViewConf.getSelfLink()|raw }}"
              enctype="multipart/form-data">
            <input type="hidden" name="MAX_FILE_SIZE" value="{{ iMaxUploadFileSize }}">
            {{ oViewConf.getHiddenSid()|raw }}
            <input type="hidden" name="cl" value="KustomEmdAdmin">
            <input type="hidden" name="fnc" value="save">
            <table class="kustom-conf-table">
                <tr class="bg-grey">
                    <td>{{ translate({ ident: "FCKUSTOM_CUSTOMER_ACCOUNT_INFO" }) }}</td>
                    <td>
                        <div class="input w356">
                            <div class="display">
                                <label class="label toggle" for="EmdCustomerAccountInfo">
                                    <input type="hidden" name="confbools[blKustomEmdCustomerAccountInfo]" value="0">
                                    <input type="checkbox" name="confbools[blKustomEmdCustomerAccountInfo]" value="1"
                                           id="EmdCustomerAccountInfo"
                                           {% if confbools.blKustomEmdCustomerAccountInfo %}checked{% endif %} {{ readonly }}>
                                    <div class="toggle-control"></div>
                                </label>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="kl-tooltip" title="{{ translate({ ident: "FCKUSTOM_EMD_CUSTOMER_INFO_TOOLTIP" }) }}">
                            <i class="fa fa-question fa-lg" aria-hidden="true"></i>
                        </span>
                    </td>
                </tr>

                <tr>
                    <td>{{ translate({ ident: "FCKUSTOM_PAYMENT_HISTORY_FULL" }) }}</td>
                    <td>
                        <div class="input w356">
                            <div class="display">
                                <label class="label toggle" for="EmdPaymentHistoryFull">
                                    <input type="hidden" name="confbools[blKustomEmdPaymentHistoryFull]" value="0">
                                    <input type="checkbox" name="confbools[blKustomEmdPaymentHistoryFull]" value="1"
                                           id="EmdPaymentHistoryFull"
                                           {% if confbools.blKustomEmdPaymentHistoryFull %}checked{% endif %} {{ readonly }}
                                           class="js-payment-history-toggle">
                                    <div class="toggle-control"></div>
                                </label>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="kl-tooltip" title="{{ translate({ ident: "FCKUSTOM_EMD_PAYMENT_HISTORY_FULL_TOOLTIP" }) }}">
                            <i class="fa fa-question fa-lg" aria-hidden="true"></i>
                        </span>
                    </td>
                </tr>
                <tr>
                    <td colspan="3" class="no-padding">
                        <div class="js-payment-history-options rows-wrapper"
                             {% if confbools.blKustomEmdPaymentHistoryFull %}style="display: block"{% endif %}>
                            <div class="kustom-expandable-list bg-grey">
                                {% for payment in activePayments %}
                                    <div class="kustom-row">
                                        <div class="row-label">
                                            <div class="sign plus"></div>
                                            <div class="text text-normal">
                                                {{ payment.desc|raw }}
                                            </div>
                                        </div>
                                        <div class="clear"></div>
                                        <div class="rows-wrapper">
                                            <table class="config-options bg-grey" style="margin-left:20px;">
                                                <tr class="no-t-border">
                                                    <td colspan="3">
                                                        <table class="inner-table bg-light">
                                                            <tr>
                                                                <td colspan="2"
                                                                    class="conf-label-1">{{ translate({ ident: "FCKUSTOM_ASSIGN_PAYMENT_METHOD_TYPE" }) }}</td>
                                                                <td>
                                                                    <span class="kl-tooltip"
                                                                          title="{{ translate({ ident: "FCKUSTOM_EMD_PAYMENT_TYPE_TOOLTIP" }) }}">
                                                                            <i class="fa fa-question fa-lg"
                                                                               aria-hidden="true"></i>
                                                                        </span>
                                                                </td>
                                                            </tr>
                                                            {% for sValue, sLabel in oView.getEmdPaymentTypeOptions() %}
                                                                <tr>
                                                                    <td class="conf-label-2">{{ sLabel }}</td>
                                                                    <td colspan="2">
                                                                        <div class="input w356">
                                                                            <input type="radio"
                                                                                   name="payments[{{ payment.oxid }}][oxpayments__fckustom_paymentoption]"
                                                                                   id="radio-{{ sValue }}-{{ payment.oxid }}"
                                                                                   class="radio-custom"
                                                                                   {% if payment.fckustom_paymentoption == sValue %}checked="checked"{% endif %}
                                                                                   value="{{ sValue }}"/>
                                                                            <label class="radio-custom-label"
                                                                                   for="radio-{{ sValue }}-{{ payment.oxid }}">
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            {% endfor %}
                                                        </table>
                                                    </td>
                                                </tr>
                                                <tr class="no-b-border">
                                                    <td colspan="3">
                                                        <table class="inner-table bg-light">
                                                            <tr>
                                                                <td colspan="2"
                                                                    class="conf-label-1">{{ translate({ ident: "FCKUSTOM_WHICH_ORDERS_IN_FULL_PAYMENT_HISTORY" }) }}</td>
                                                                <td>
                                                                    <span class="kl-tooltip"
                                                                          title="{{ translate({ ident: "FCKUSTOM_EMD_HISTORY_FULL_TOOLTIP" }) }}">
                                                                            <i class="fa fa-question fa-lg"
                                                                               aria-hidden="true"></i>
                                                                    </span>
                                                                </td>
                                                            </tr>
                                                            {% for sValue, sLabel in oView.getFullHistoryOrdersOptions() %}
                                                                <tr>
                                                                    <td class="conf-label-2">{{ sLabel }}</td>
                                                                    <td colspan="2">
                                                                        <div class="input w356">
                                                                            <input type="radio"
                                                                                   name="payments[{{ payment.oxid }}][oxpayments__fckustom_emdpurchasehistoryfull]"
                                                                                   id="radio-{{ sValue }}-{{ payment.oxid }}"
                                                                                   class="radio-custom"
                                                                                   {% if payment.fckustom_emdpurchasehistoryfull == sValue %}checked="checked"{% endif %}
                                                                                   value="{{ sValue }}"/>
                                                                            <label class="radio-custom-label"
                                                                                   for="radio-{{ sValue }}-{{ payment.oxid }}">
                                                                        </div>
                                                                    </td>
                                                                </tr>
                                                            {% endfor %}

                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                    </td>
                </tr>
                <tr class="bg-grey">
                    <td>{{ translate({ ident: "FCKUSTOM_PASSTHROUGH_FIELD" }) }}</td>
                    <td>
                        <div class="input w356">
                            <div class="display">
                                <label class="label toggle" for="EmdPassThrough">
                                    <input type="hidden" name="confbools[blKustomEmdPassThrough]" value="0">
                                    <input type="checkbox" name="confbools[blKustomEmdPassThrough]" value="1"
                                           id="EmdPassThrough"
                                           {% if confbools.blKustomEmdPassThrough %}checked{% endif %} {{ readonly }}>
                                    <div class="toggle-control"></div>
                                </label>
                            </div>
                        </div>
                    </td>
                    <td>
                        <span class="kl-tooltip" title="{{ translate({ ident: "FCKUSTOM_EMD_PASSTHROUGH_FIELD_TOOLTIP" }) }}">
                            <i class="fa fa-question fa-lg" aria-hidden="true"></i>
                        </span>
                    </td>
                </tr>
            </table>
            <div class="btn-center">
                <input type="submit" name="save" class="btn-save" value="{{ translate({ ident: "GENERAL_SAVE" }) }}"
                       id="form-save-button" {{ readonly }}>
            </div>
        </form>
    </div>
</div>
<script src="{{ oViewConf.getModuleUrl('fckustom', 'out/admin/src/js/fckustom_admin_lib.js') }}"></script>
<script src="{{ oViewConf.getModuleUrl('fckustom', 'out/admin/src/js/fckustom_admin_lib.js') }}"></script>